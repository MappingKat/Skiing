!!!
%html
  %head
    %title We Are
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %script{src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyA77x4_6dcnzuaQZfq5QvJcae6a72RMGTg&sensor=FALSE", type: "text/javascript"}
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags



  %body
  
    .pure-menu.pure-menu-open.pure-menu-horizontal
      - if current_user
        %a.pure-menu-heading Logo
        %ul
          %li
            %label= current_user.name
          %li
            = link_to "Sign out", destroy_user_session_path, method: :delete
          %li
            = link_to('Edit Settings', edit_user_registration_path) 
          %li
            = link_to('Show Profile', user_profile_path(current_user))
          %li
            = link_to('Resorts', resorts_path)
      - else
        %a.pure-menu-heading Logo
        %ul
          %li
            = link_to "Sign In", new_user_session_path
          %li
            = link_to "Register", new_user_registration_path 


        
    .main_section 
      .login_alerts
        %p.notice= notice # Needed for Devise to alert User
        %p.alert= alert

      = yield

      = yield :map_javascript
