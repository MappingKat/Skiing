#sign-in
  %h1 
    sign
    %span.magenta> in.
  %div.pure-form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %div
        = f.text_field :email, autofocus: true, placeholder: "Email Address"
      %div

        = f.password_field :password, autocomplete: "off", placeholder: 'Password'
      - if devise_mapping.rememberable?
        %div
          = f.check_box :remember_me
          = f.label :remember_me
      %div= f.submit "SIGN IN", :id => 'input_button_sign_in', :class => 'pure-input-rounded'
    = render "devise/shared/links"
    .social_sign_ins
      = link_to image_tag('/assets/twitter.png'), user_omniauth_authorize_path('twitter')
      = link_to image_tag('/assets/fb.png'), user_omniauth_authorize_path('facebook')