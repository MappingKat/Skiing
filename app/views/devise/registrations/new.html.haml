%h2 WELCOME TO WE ARE

#sign-up
  %div.pure-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div
        = f.text_field :name, autofocus: true, placeholder: "User Name"
      %div
        = f.text_field :email, placeholder: "Email Address"
      %div
        = f.password_field :password, autocomplete: "off", placeholder: "Password"
      %div
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation"
      %div
        = f.submit "SIGN UP", :id => 'input_button_sign_up', :class => 'pure-input-rounded'

    = link_to "Sign in with Twitter", user_omniauth_authorize_path('twitter')
    = link_to "Sign in with Facebook", user_omniauth_authorize_path('facebook')

