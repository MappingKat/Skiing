%h2
  = @resort.day_zero_day_title.downcase.strip
  %span.magenta> weather.
    

#weather_overview  
  .pure-g
    .pure-u-1-1
      %table
        %tr
          %th
            Today
          %th
            Tonight
          %th
            Snow
          %th
            Temperature
        %tr
          %td 
            = image_tag("#{@resort.icon_day_zero}")

          %td
            = image_tag("#{@resort.icon_night_zero}")
          %td
            %p
              Chances of Snow
            %h1
              = @resort.chance_of_snow
              \ %
          %td
            %p
              In the Valley
            %h1
              = @resort.button_min_temp 
              \ -
              = @resort.button_max_temp
              째C
            %strong
              = @resort.button_min_temp_fahrenheit
              \ -
              = @resort.button_max_temp_fahrenheit
              째F
        %tr
          %td 
            = @resort.day_zero_day_text

          %td
            = @resort.day_zero_night_text
          %td
            %p
              Total Snow Fall
            %h1
              = @resort.total_snow_fall
              cm
          %td
            %p
              On the Mountain
            %h1
              = @resort.top_min_temp
              \ -
              = @resort.top_max_temp
              째C
            %strong
              = @resort.top_min_temp_fahrenheit
              \ -
            %strong
              = @resort.top_max_temp_fahrenheit
              째F

